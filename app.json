{
  "name": "Heroku File Sharing Bot",
  "description": "A simple Telegram bot to share files via channel links.",
  "repository": "https://github.com/yourusername/file-share-heroku-bot",
  "keywords": ["telegram", "pyrogram", "file", "share"],
  "env": {
    "TG_BOT_TOKEN": {
      "description": "Your Bot token from @BotFather",
      "value": ""
    },
    "APP_ID": {
      "description": "Telegram API ID from https://my.telegram.org",
      "value": ""
    },
    "API_HASH": {
      "description": "Telegram API Hash from https://my.telegram.org",
      "value": ""
    },
    "OWNER_ID": {
      "description": "Your Telegram numeric user ID",
      "value": ""
    },
    "CHANNEL_ID": {
      "description": "Your Channel ID (make bot admin)",
      "value": ""
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
